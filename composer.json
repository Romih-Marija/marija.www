{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "silverstripe/recipe-cms": "~5.3.0",
        "silverstripe-themes/simple": "~3.3.2",
        "silverstripe/login-forms": "~5.3.0",
        "dnadesign/silverstripe-elemental": "^5.3",
        "dnadesign/silverstripe-elemental-virtual": "^2.2",
        "undefinedoffset/sortablegridfield": "^2.2",
        "silverstripe/lumberjack": "~3.2.0",
        "evanshunt/lumberjack-sort-and-summary": "^2.0",
        "colymba/gridfield-bulk-editing-tools": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "extra": {
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "app/client",
            "themes/ntb/css",
            "themes/ntb/images",
            "themes/ntb/javascript"
        ]
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
